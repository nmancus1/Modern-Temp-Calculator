         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="convertToFbutton" layoutX="317.0" layoutY="255.0" mnemonicParsing="false" onAction="#setConvertToF" stylesheets="@material-fx-v0_3.css" text="Convert to Fahrenheit" toggleGroup="$toggleGroup1" />
   </children>
</AnchorPane>
