<AnchorPane id="AnchorPane" prefHeight="325.0" prefWidth="550.0" stylesheets="@material-fx-v0_3.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="moderntempcalc.tempCalcController">
   <children>
      <Pane prefHeight="110.0" prefWidth="550.0" style="-fx-background-color: #ae81e8;" stylesheets="@material-fx-v0_3.css">
        <children>
              <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="8.0" layoutY="16.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@thermo.png" />
               </image>
            </ImageView>
            <Label layoutX="44.0" layoutY="21.0" stylesheets="@material-fx-v0_3.css" text="tempCalc" textFill="#cccccc">
               <font>
                  <Font name="Roboto Light" size="17.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <AnchorPane layoutX="125.0" layoutY="52.0" prefHeight="171.0" prefWidth="300.0" style="-fx-background-color: #ffffff;" stylesheets="@material-fx-v0_3.css">
         <effect>
                <DropShadow color="BLACK" offsetX="2.0" offsetY="2.0" />
            </effect>
          <children>
            <Button fx:id="convertButton" layoutX="114.0" layoutY="111.0" mnemonicParsing="false" onAction="#convertTemp" style="-fx-background-color: #999999;" stylesheets="@material-fx-v0_3.css" text="Calculate" textAlignment="JUSTIFY" />
